{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": [
      "node_modules"
  ]
}